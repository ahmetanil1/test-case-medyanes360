// Model Güncellendiğinde yapılacaklar:
// 1-" npx prisma generate " bunu terminale yaz (enter!)
// 2- VS Codu kapatıp yeniden aç.
// ! Sırayla yaparsan gücelleme gerçekleşir.
generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Admin {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    role      Role     @default(ADMIN)
    name      String
    surname   String
    email     String   @unique
    password  String
    todos     Todo[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model AllUser {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    role      Role     @default(USER)
    name      String
    surname   String
    password  String
    email     String   @unique
    todos     Todo[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Todo {
    id          String       @id @map("_id") @db.ObjectId
    title       String
    description String?
    isCompleted Boolean      @default(false)
    priority    Priority     @default(MEDIUM)
    category    CategoryType @default(WORK)
    createdAt   DateTime     @default(now())
    updatedAt   DateTime     @updatedAt
    Admin       Admin?       @relation(fields: [adminId], references: [id])
    adminId     String?      @db.ObjectId
    AllUser     AllUser?     @relation(fields: [allUserId], references: [id])
    allUserId   String?      @db.ObjectId
}

enum CategoryType {
    WORK
    PERSONAL
    DEVELOPMENT
    URGENT
    FINANCE
    HEALTH
    OTHER // Varsayılan veya genel bir kategori
}

enum Priority {
    LOW
    MEDIUM
    HIGH
}

enum Role {
    ADMIN
    USER
}
